# Environment variables for Corporate Energy Platform backend
# Copy this file to .env and fill in your values

# Data Source URLs (optional - falls back to testdata if not set)
# TEPCO - Tokyo Electric Power Company demand data
TEPCO_URL=https://www.tepco.co.jp/forecast/html/download-j.html

# Kansai Electric Power Company demand data
KANSAI_URL=https://www.kansai-td.co.jp/denkiyoho/download.html

# OCCTO - Organization for Cross-regional Coordination of Transmission Operators
OCCTO_URL=https://www.occto.or.jp/

# JEPX - Japan Electric Power Exchange spot prices
JEPX_URL=https://www.jepx.jp/

# HTTP Fetching Configuration
# Max retries for HTTP requests (default: 3)
HTTP_MAX_RETRIES=3

# Request timeout in seconds (default: 30)
HTTP_TIMEOUT=30

# Circuit Breaker Configuration
# Max consecutive failures before opening circuit (default: 5)
CIRCUIT_BREAKER_MAX_FAILURES=5

# Circuit breaker timeout in seconds (default: 60)
CIRCUIT_BREAKER_TIMEOUT=60

# Logging
# Enable JSON structured logging (default: false)
LOG_JSON=false

# Mode Selection
# Use real HTTP fetching (true) or fallback to testdata (false)
USE_HTTP_FETCH=false
